<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="CONSOLE_LOG_PATTERN">[%d{yyyy-MM-dd HH:mm:ss Z}] [%p] %c{1}.%M %m%n</Property>
        <Property name="FILE_LOG_PATTERN">[%d{yyyy-MM-dd HH:mm:ss.SS Z}] [%p] %c.%M %m%n</Property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>